<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/accent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="8">


            <GridView
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:numColumns="2"
                    android:padding="1dp"
                    android:id="@+id/questions_list"
                    android:stretchMode="columnWidth"
                    android:horizontalSpacing="1dp"
                    android:verticalSpacing="1dp"
                    android:scrollbars="none"
                    />

            <View
                    android:id="@+id/time_remain"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/md_button_padding_vertical"
                    android:background="@color/red"
                    />
        </FrameLayout>

        <RelativeLayout
                android:layout_weight="2"
                android:background="@color/accent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/answer_status"
                    android:layout_centerInParent="true"
                    android:text=""
                    android:textSize="@dimen/question_title_text_size"
                    android:textColor="@color/primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mask"
            android:visibility="gone"
            android:background="@color/accent"
            />

    <com.gracecode.android.gojuon.ui.widget.CountdownTextView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textSize="100sp"
            android:textColor="@color/primary_dark"
            android:id="@+id/countdown"
            />
</FrameLayout>
