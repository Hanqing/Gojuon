<?xml version="1.0" encoding="utf-8"?>
<com.gracecode.android.gojuon.ui.widget.CharacterLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="5sp"
        android:background="@drawable/item_background"
        android:minHeight="72dp"
        >

    <LinearLayout
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:textColor="@drawable/item_text_color"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/hiragana"
                android:textSize="@dimen/character_title"
                android:gravity="center"
                />

        <RelativeLayout
                android:id="@+id/character_other"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_alignParentLeft="true"
                    android:textColor="@drawable/item_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/roumaji"
                    android:textSize="15sp"
                    android:gravity="left"
                    />

            <TextView
                    android:layout_alignParentRight="true"
                    android:textColor="@drawable/item_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/katakana"
                    android:textSize="15sp"
                    android:gravity="right"
                    />
        </RelativeLayout>
    </LinearLayout>
</com.gracecode.android.gojuon.ui.widget.CharacterLayout>
